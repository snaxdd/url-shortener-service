{
  "exclude": [
    ".storybook",
    "stories",
  ],
  "include": ["source/types/index.d.ts"],
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "typeRoots": [
      "./source/types/index.d.ts",
      "./node_modules/@types"
    ]
  }
}
